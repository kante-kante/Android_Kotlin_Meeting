<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yjr.meeting">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:largeHeap="true"
        android:windowSoftInputMode="adjustResize">

        <activity android:name="com.yjr.meeting.FirstActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.yjr.meeting.LoginActivity"></activity>
        <activity android:name="com.yjr.meeting.MainActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name="com.yjr.meeting.SignUpActivity"></activity>
        <activity android:name="com.yjr.meeting.ChangeProfileActivity"></activity>
        <activity android:name="com.yjr.meeting.FindPasswordActivity"></activity>
        <activity android:name=".ChatActivity"/>
        <activity android:name=".ChatActivity2"/>
    </application>

</manifest>